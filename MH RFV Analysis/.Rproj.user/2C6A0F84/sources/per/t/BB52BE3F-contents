gc()
articles_read_per_day_lognormal <- brm(bf(total_articles~time_period+0+(1|is_weekend)),
                                          family=lognormal(),
  prior=c(
          prior(normal(500,400),class="b")),                                       
  data = articles_read_per_day,
  cores = 4,
  file = "articles_read_per_day_lognormal",
  chains = 6, warmup = WARMUP, iter = 10000, seed = BAYES_SEED,
  refresh = 0
)

articles_read_per_day_lognormal
