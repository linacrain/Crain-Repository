articles_per_day_2023<-further_cleaned_mh%>%
  filter(Date<=as.Date("2023-05-31",format="%Y-%m-%d"))%>%
  mutate(time_period=ifelse(Date<=as.Date("2023-05-31",format="%Y-%m-%d"),"2023 Jan 1st to May 31st","2024 Jan 1st to May 31st"))%>%
  group_by(ref_id,time_period)%>%
    summarise(total_articles=sum(n_articles_visited),
            n_article_days=n_distinct(if_else(n_articles_visited>0,Date,NA),NA))
  
articles_per_day_2024<-further_cleaned_mh%>%
  filter(Date>=as.Date("2024-01-01",format="%Y-%m-%d"))%>%
  mutate(time_period=ifelse(Date<=as.Date("2023-05-31",format="%Y-%m-%d"),"2023 Jan 1st to May 31st","2024 Jan 1st to May 31st"))%>%
  group_by(ref_id,time_period)%>%
  summarise(total_articles=sum(n_articles_visited),
            n_article_days=n_distinct(if_else(n_articles_visited>0,Date,NA),NA))

articles_per_day<-rbind(articles_per_day_2023,articles_per_day_2024)%>%
  filter(total_articles!=0)%>%
  mutate(articles_per_day=total_articles/n_article_days)

articles_per_day%>%
  group_by(time_period)%>%
  summarise(mean=mean(articles_per_day),
            var=var(articles_per_day))
  

articles_per_day%>%
  ggplot(aes(articles_per_day,fill=time_period))+geom_histogram(alpha=0.2,position="identity")+theme_minimal()+xlim(c(0,7.5))+guides(fill="none")+xlab("Articles Per Day")+geom_vline(xintercept=1.486,color="red",linetype="dashed")+geom_vline(xintercept=1.708,color="blue",linetype="dashed")
