active_days_2023<-further_cleaned_mh%>%
  filter(Date<=as.Date("2023-05-31",format="%Y-%m-%d"))%>%
  mutate(time_period=ifelse(Date<=as.Date("2023-05-31",format="%Y-%m-%d"),"2023 Jan 1st to May 31st","2024 Jan 1st to May 31st"))%>%
  group_by(ref_id,time_period)%>%
  summarise(n=n_distinct(Date))
  
active_days_2024<-further_cleaned_mh%>%
  filter(Date>=as.Date("2024-01-01",format="%Y-%m-%d"))%>%
  mutate(time_period=ifelse(Date<=as.Date("2023-05-31",format="%Y-%m-%d"),"2023 Jan 1st to May 31st","2024 Jan 1st to May 31st"))%>%
  group_by(ref_id,time_period)%>%
  summarise(n=n_distinct(Date,na.rm=TRUE))

active_days<-rbind(active_days_2023,active_days_2024)

active_days_histogram<-active_days%>%
  ggplot(aes(n,fill=time_period))+geom_histogram(alpha=0.2,position="identity")+theme_minimal()+scale_fill_manual(values = c("2023 Jan 1st to May 31st" = "red", "2024 Jan 1st to May 31st" = "blue"))+geom_vline(xintercept = 14.20,color="red",linetype="dashed")+geom_vline(xintercept = 17.41,color="blue",linetype="dashed")+xlim(c(0,100))+ylab("")+xlab("Active Days")+geom_text(x=19.158,y=3000,label=paste("2024 Mean: 17.41 Days"),size=4,hjust=-0.2,color="blue")+
  geom_text(x=19.158,y=2000,label=paste("2023 Mean: 14.20 Days"),size=4,hjust=-0.2,color="red")+guides(fill="none")
