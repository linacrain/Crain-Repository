  summarise(n_potential_renewals=n_distinct(paste(shiptocustomernumber,ordernumber)),
            n_renewals=n_distinct(ifelse(!is.na(renewalordernumber),paste(shiptocustomernumber,ordernumber),NA),na.rm=TRUE),
