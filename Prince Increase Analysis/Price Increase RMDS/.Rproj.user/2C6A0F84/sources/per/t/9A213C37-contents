ccl_table<-reduced_list_city%>%
  filter(brand=="CL")%>%
  crossing(date_index)%>%
  mutate(termlength=as.numeric(termlength))%>%
  mutate(rate_per_day=((rate/termlength)/7)*copies)%>%
  filter(rate>0)%>%
