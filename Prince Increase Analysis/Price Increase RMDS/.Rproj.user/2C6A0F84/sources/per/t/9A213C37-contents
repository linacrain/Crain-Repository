         p_end_date=if_else(expirationissuedate>end_date,end_date,expirationissuedate))%>%
  mutate(total_days_this_week=as.numeric(difftime(p_end_date,p_start_date,units="days")))%>%
  filter(total_days_this_week>0&total_days_this_week<=7)%>%
  mutate(weekly_recognized_revenue=rate_per_day*total_days_this_week)%>%
  group_by(start_date)%>%
  summarise(total_recognized_weekly_revenue=sum(weekly_recognized_revenue),
            distinct_contracts=n_distinct(paste(shiptocustomernumber,ordernumber,adv_subid)),
            distinct_subscriptions=n_distinct(adv_subid),
            total_copies=sum(copies)
            )

